@model IEnumerable<ShortListMVC.Models.Post>
@{
    ViewData["Title"] = "Home Page";
}

<section class="hero-area overlay">
    <div class="container">
        <div class="row">
            <div class="col-lg-10 offset-lg-1 col-md-12 col-12">
                <div class="hero-text text-center">

                    <div class="section-heading">
                        <h2 class="wow fadeInUp" data-wow-delay=".3s">Sarı sayfalar'a hoşgeldiniz</h2>
                        <p class="wow fadeInUp" data-wow-delay=".5s">
                            Sarı sayfalar'da hemen ilan verin <br>
                            ya da ilanları inceleyin, ilan sahipleriyle iletişime geçin.
                        </p>
                    </div>


                    <div class="search-form wow fadeInUp" data-wow-delay=".7s">
                        <div class="row">
                            <div class="col-lg-4 col-md-4 col-12 p-0">
                                <div class="search-input">
                                    <label for="keyword"><i class="lni lni-search-alt theme-color"></i></label>
                                    <input type="text" name="keyword" id="keyword" placeholder="Anahtar kelime">
                                </div>
                            </div>
                            <div class="col-lg-3 col-md-3 col-12 p-0">
                                <div class="search-input">
                                    <label for="category"><i class="lni lni-grid-alt theme-color"></i></label>
                                    <select name="category" id="category">
                                        <option value="none" selected disabled>Kategoriler</option>
                                        <option value="none">Kayıp/Buluntu</option>
                                        <option value="none">Evcil Hayvan</option>
                                        <option value="none">İkinci El</option>
                                        <option value="none">Eleman Aranıyor</option>
                                        <option value="none">Serbest Çalışanlar</option>
                                        <option value="none">Etkinlikler</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-lg-3 col-md-3 col-12 p-0">
                                <div class="search-input">
                                    <label for="location"><i class="lni lni-map-marker theme-color"></i></label>
                                    <select name="location" id="location">
                                        <option value="none" selected disabled>Şehir</option>
                                        <option value="none">İstanbul</option>
                                        <option value="none">Ankara</option>
                                        <option value="none">İzmir</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-lg-2 col-md-2 col-12 p-0">
                                <div class="search-btn button">
                                    <button class="btn"><i class="lni lni-search-alt"></i> Ara</button>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</section>
<section class="categories">
    <div class="container">
        <div class="cat-inner">
            <div class="row">
                <div class="col-12 p-0">
                    <div class="category-slider">

                        <a href="category.html" class="single-cat">
                            <div class="icon">
                                <img src="assets/images/categories/controller.svg" alt="#">
                            </div>
                            <h3>Kayıp/Buluntu</h3>
                            <h5 class="total">35</h5>
                        </a>


                        <a href="category.html" class="single-cat">
                            <div class="icon">
                                <img src="assets/images/categories/matrimony.svg" alt="#">
                            </div>
                            <h3>Evcil Hayvan</h3>
                            <h5 class="total">22</h5>
                        </a>

                        <a href="category.html" class="single-cat">
                            <div class="icon">
                                <img src="assets/images/categories/car.svg" alt="#">
                            </div>
                            <h3>İkinci El</h3>
                            <h5 class="total">55</h5>
                        </a>

                        <a href="category.html" class="single-cat">
                            <div class="icon">
                                <img src="assets/images/categories/travel.svg" alt="#">
                            </div>
                            <h3>Eleman Aranıyor</h3>
                            <h5 class="total">21</h5>
                        </a>

                        <a href="category.html" class="single-cat">
                            <div class="icon">
                                <img src="assets/images/categories/laptop.svg" alt="#">
                            </div>
                            <h3>Serbest Çalışanlar</h3>
                            <h5 class="total">44</h5>
                        </a>

                        <a href="category.html" class="single-cat">
                            <div class="icon">
                                <img src="assets/images/categories/real-estate.svg" alt="#">
                            </div>
                            <h3>Etkinlikler</h3>
                            <h5 class="total">65</h5>
                        </a>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="items-grid section custom-padding">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="section-title">
                    <h2 class="wow fadeInUp" data-wow-delay=".4s">Güncel İlanlar</h2>
                    <p class="wow fadeInUp" data-wow-delay=".6s">
                        Güncel ilanları inceleyip ilan sahipleri ile iletişime geçebilirsiniz.
                    </p>
                </div>
            </div>
        </div>
        <div class="single-head">
            <div class="row">
                @foreach (var post in Model)
                {
                    <div class="col-lg-4 col-md-6 col-12">

                        <div class="single-grid wow fadeInUp" data-wow-delay=".2s">
                            @if (!string.IsNullOrEmpty(post.ImageUrl))
                            {
                                <div class="image">
                                    <a href="item-details.html" class="thumbnail"><img src="@post.ImageUrl" alt="#"></a>
                                    <div class="author">
                                        <div class="author-image">
                                            <a href="javascript:void(0)">
                                                <img src="assets/images/items-grid/author-1.jpg" alt="#">
                                                <span>İlan Sahibi</span>
                                            </a>
                                        </div>
                                        <p class="sale">Yeni</p>
                                    </div>
                                </div>
                            }

                            <div class="content">
                                <div class="top-content">
                                    <a href="javascript:void(0)" class="tag">Kategori</a>
                                    <h3 class="title">
                                        <a href="item-details.html">@post.Title</a>
                                    </h3>
                                    <p class="update-time">Son güncelleme: 1 saat önce</p>
                                    <ul class="rating">
                                        <li><i class="lni lni-star-filled"></i></li>
                                        <li><i class="lni lni-star-filled"></i></li>
                                        <li><i class="lni lni-star-filled"></i></li>
                                        <li><i class="lni lni-star-filled"></i></li>
                                        <li><i class="lni lni-star-filled"></i></li>
                                        <li><a href="javascript:void(0)">(35)</a></li>
                                    </ul>
                                    <ul class="info-list">
                                        <li><a href="javascript:void(0)"><i class="lni lni-map-marker"></i> İstanbul</a></li>
                                        <li><a href="javascript:void(0)"><i class="lni lni-timer"></i> 29 Ekim 2023</a></li>
                                    </ul>
                                </div>
                                <div class="bottom-content">
                                    <p class="price">Etiketler: <span>@post.Tags</span></p>
                                    <a href="javascript:void(0)" class="like"><i class="lni lni-heart"></i></a>
                                </div>
                            </div>
                        </div>

                    </div>
                }


            </div>
        </div>
    </div>
</section>

<section class="call-action overlay section">
    <div class="container">
        <div class="row ">
            <div class="col-lg-8 offset-lg-2 col-12">
                <div class="inner">
                    <div class="content">
                        <h2 class="wow fadeInUp" data-wow-delay=".4s">
                            Siz de ilanınızı Sarı Sayfalar'da verin<br>
                            zamandan tasarruf edin
                        </h2>
                        <p class="wow fadeInUp" data-wow-delay=".6s">Sarı sayfalar ile siz de zaman kazanın<br> Sarı Sayfalar'da ilan vermek çok kolay!</p>
                        <div class="button wow fadeInUp" data-wow-delay=".8s">
                            <a asp-controller="Posts" asp-action="Create" class="btn">Hemen ilan ver</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

