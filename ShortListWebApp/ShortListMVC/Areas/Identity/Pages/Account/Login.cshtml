@page
@model LoginModel

@{
    ViewData["Title"] = "Giriş";
}

<section class="login section overlay" style="padding-top: 140px;">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 offset-lg-3 col-md-8 offset-md-2 col-12">
                <div class="form-head">
                    <h4 class="title">Giriş yap</h4>
                    <form action="#!" method="post">
                        <div class="form-group">
                            <label>E-posta</label>
                            <input name="email" type="email">
                        </div>
                        <div class="form-group">
                            <label>Şifre</label>
                            <input name="password" type="password">
                        </div>
                        <div class="check-and-pass">
                            <div class="row align-items-center">
                                <div class="col-lg-6 col-md-6 col-12">
                                    <div class="form-check">
                                        <input type="checkbox" class="form-check-input width-auto" id="exampleCheck1">
                                        <label class="form-check-label">Beni hatırla</label>
                                    </div>
                                </div>
                                <div class="col-lg-6 col-md-6 col-12">
                                    <a href="javascript:void(0)" class="lost-pass">Şifremi unuttum</a>
                                </div>
                            </div>
                        </div>
                        <div class="button">
                            <button type="submit" class="btn">Giriş yap</button>
                        </div>
                        <p class="outer-link">
                            Üye değil misiniz? <a href="registration.html">Üye ol</a>
                        </p>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

